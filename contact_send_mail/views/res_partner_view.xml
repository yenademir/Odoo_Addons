<odoo>
    <data>
        <!-- E-posta gönderme eylemi tanımı -->
        <record id="action_send_partner_balance" model="ir.actions.server">
            <field name="name">Send Partner Balance Email</field>
            <field name="model_id" ref="base.model_res_partner"/>
            <field name="binding_model_id" ref="base.model_res_partner"/>
            <field name="state">code</field>
            <field name="code">model.action_send_account_partner_balance()</field>
        </record>

        <!-- Form görünümü düzenleme: E-posta gönderme düğmesi ekleme -->
        <record id="view_partner_form_balance_inherited" model="ir.ui.view">
            <field name="name">res.partner.form.balance.inherited</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
               <xpath expr="//sheet" position="before">
                    <header>
                        <button string="Mutabakat Gönder" type="object" class="oe_highlight" name="action_send_account_sales"/>
                    </header>
                </xpath>
            </field>
        </record>
    </data>
</odoo>